{
    "manifest_version": 2,
    "name": "时间规划",
    "version": "1.0.0",
    "description": "时间规划",
    "icons":
    {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "background":
    {
        "scripts": ["js/moment.js", "js/background.js"]
    },
    "browser_action": 
    {
        "default_icon": "img/icon.png",
        "default_title": "Click launch Something",
        "default_popup": "popup.html"
    },
    "content_scripts": 
    [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content-script.js"],
            "css": ["css/custom.css"],
            "run_at": "document_start"
        }
    ],
    "permissions":
    [
        "contextMenus",
        "tabs",
        "notifications",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": ["js/inject.js"],
    "homepage_url": "https://github.com/zhulinghao",
    "chrome_url_overrides":
    {
    },
    "omnibox": { "keyword" : "nono~" },
    "options_ui":
    {
        "page": "options.html",
        "chrome_style": true
    },
    "content_security_policy": "style-src 'self' 'unsafe-inline';script-src 'self' 'unsafe-eval' https://cdnjs.cloudflare.com; object-src 'self' ;"
}